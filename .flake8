[flake8]
max-line-length = 79
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    site-packages,
    .ruff_cache,
    build,
    dist,
    *.egg-info
ignore =
    E203,
    W503,
    E722,
    F401,
    F841,
    E402,
    F541,
    E221,
    E226,
    E231
per-file-ignores =
    __init__.py:F401
    tests/*:E501,F401
    */tests/*:E501,F401
